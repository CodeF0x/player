{
  "name": "violin",
  "productName": "Violin",
  "version": "1.0.0",
  "description": "A minimalistic music player for desktop systems.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=src/img/icons/icon.icns --prune=true --out=release-builds",
    "create-installer-mac": "electron-installer-dmg ./release-builds/Violin-darwin-x64/violin.app violin --out=release-builds --overwrite --icon=src/img/icons/icon.icns",
    "package-linux": "electron-packager .  violin --overwrite --asar=true --platform=linux --arch=x64 --icon=src/img/icons/icon.png --prune=true --out=release-builds",
    "create-installer-linux": "electron-installer-debian --src release-builds/violin-linux-x64/ --arch amd64 --config config/debian-installer.json",
    "package-windows": "electron-packager . violin --overwrite --asar=true --platform=win32 --arch=ia32 --icon=src/img/icons/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Violin\"",
    "create-windows-installer": "node config/create-windows-installer.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodeF0x/violin.git"
  },
  "keywords": [
    "dark theme",
    "material design",
    "minimalistic",
    "mp3",
    "music player",
    "music",
    "audio"
  ],
  "author": "Tobias \"CodeF0x\" Oettl",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CodeF0x/violin/issues"
  },
  "homepage": "https://codef0x.github.io/violin/",
  "devDependencies": {
    "electron": "^4.0.7",
    "electron-installer-dmg": "^2.0.0",
    "electron-packager": "^13.1.1",
    "electron-winstaller": "^3.0.4"
  },
  "dependencies": {
    "jsmediatags": "^3.8.1"
  }
}
