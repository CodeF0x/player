{
  "name": "violin",
  "productName": "Violin",
  "version": "2.1.0",
  "description": "A fast, lightweight, and minimalistic desktop music player.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "ship": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodeF0x/violin.git"
  },
  "keywords": [
    "lightweight",
    "cross-platform",
    "fast",
    "minimalistic",
    "music player",
    "music",
    "audio"
  ],
  "author": "Tobias \"CodeF0x\" Oettl",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CodeF0x/violin/issues"
  },
  "homepage": "https://violin-player.cc/",
  "devDependencies": {
    "electron": "^4.0.7",
    "gulp": "^4.0.2",
    "gulp-clean-css": "^4.2.0",
    "gulp-terser": "^1.2.0"
  },
  "dependencies": {
    "jsmediatags": "^3.8.1"
  },
  "build": {
    "files": [
      "build/**/*",
      "modules/**/*"
    ],
    "directories": {
      "output": "release-builds",
      "buildResources": "src/img/icons"
    },
    "dmg": {
      "contents": [
        {
          "x": 120,
          "y": 230
        },
        {
          "x": 400,
          "y": 230,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "snap": {
      "confinement": "strict",
      "summary": "A fast, lightweight, and minimalistic desktop music player.",
      "grade": "stable",
      "category": "Audio"
    },
    "win": {
      "target": "msi",
      "icon": "src/img/icons/icon.ico"
    }
  }
}
