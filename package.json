{
  "name": "violin",
  "productName": "Violin",
  "version": "2.1.0",
  "description": "A minimalistic music player for desktop systems.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "violin",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": "false",
      "perMachine": "false",
      "allowElevation": "true",
      "allowToChangeInstallationDirectory": "true"
    },
    "directories": {
      "output": "release-builds"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodeF0x/violin.git"
  },
  "keywords": [
    "dark theme",
    "material design",
    "minimalistic",
    "mp3",
    "music player",
    "music",
    "audio"
  ],
  "author": "Tobias \"CodeF0x\" Oettl",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CodeF0x/violin/issues"
  },
  "homepage": "https://violin-player.cc/",
  "devDependencies": {
    "electron": "^4.0.7",
    "electron-builder": "^21.0.15"
  },
  "dependencies": {
    "jsmediatags": "^3.8.1"
  }
}
